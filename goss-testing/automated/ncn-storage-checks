function run_storage_tests {
  node=$1
  port=$2
  echo Running tests against storage node $'\e[1;33m'$node$'\e[0m'
  url=http://$node:$port/ncn-storage-tests
  echo Server URL: $url
  results=`curl -s {$url}`
  if [[ $? == 0 ]]; then
    echo
    echo "TEST OUTPUT:"
    echo $results | jq
  else
    echo $'\e[1;31m'ERROR: Server endpoint could not be reached$'\e[0m'
  fi
}

echo $'\e[1;33m'Storage Node Automated Tests$'\e[0m'
echo $'\e[1;33m'----------------------------$'\e[0m'
echo
# find the storage node names and query the server endpoint
grep NMN /etc/dnsmasq.d/statics.conf | grep ncn-s | awk -F"," '{print $5}' | \
  while read node ; do run_storage_tests "$node" "8997" echo ; done

exit