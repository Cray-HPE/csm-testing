function run_k8s_tests {
  type=$1
  node=$2
  port=$3
  endpoint=$4
  echo Running tests against NCN Kubernetes $type node $'\e[1;33m'$node$'\e[0m'
  url=http://$node:$port/$endpoint
  echo Server Endpoint: $url
  results=`curl -s {$url}`
  if [[ $? == 0 ]]; then
    echo
    echo "TEST OUTPUT:"
    echo $results | jq
  else
    echo $'\e[1;31m'ERROR: Server endpoint could not be reached$'\e[0m'
  fi
}

# master nodes
echo $'\e[1;33m'Master Node Kubernetes Tests$'\e[0m'
echo $'\e[1;33m'----------------------------$'\e[0m'
echo
# find the master node names and query the server endpoint
grep NMN /etc/dnsmasq.d/statics.conf | grep ncn-m | grep -v ncn-m001 | awk -F"," '{print $5}' | \
  while read node ; do run_k8s_tests "master" "$node" "8996" "ncn-kubernetes-tests-master" echo ; done

# worker nodes
echo $'\e[1;33m'Worker Node Kubernetes Tests$'\e[0m'
echo $'\e[1;33m'----------------------------$'\e[0m'
echo
# find the worker node names and query the server endpoint
grep NMN /etc/dnsmasq.d/statics.conf | grep ncn-w | awk -F"," '{print $5}' | while read node ; \
  do run_k8s_tests "worker" "$node" "8998" "ncn-kubernetes-tests-worker" echo ; done

exit